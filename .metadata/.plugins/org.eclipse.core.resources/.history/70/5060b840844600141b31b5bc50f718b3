
#TEHTÄVÄ 2

tiedosto = File.open(".txt","w")

teksti = ""

while teksti != "lopeta"
  
  puts "Kirjoita jotain (lopeta lopettaa):"
  teksti = gets.chomp
  tiedosto.puts(teksti)
  
end
tiedosto.close
tiedosto = File.open(".txt","r")

puts "Tiedostoon kirjoitettiin:"

tiedosto.each {|rivi| print rivi}
tiedosto.close




