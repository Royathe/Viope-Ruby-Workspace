
#TEHTÄVÄ 2

def muuntaja(syote)
  
  syote = syote.gsub("a","y")
  syote = syote.gsub("l","g")
  syote = syote.upcase
  return syote
  
end

puts "Kirjoita jotain:"
syote = gets.chomp
syote = muuntaja(syote)
puts "Käsittelyn jälkeen tulos on: #{syote}"


#TEHTÄVÄ 1
=begin
def tulostaja(text, kerta)
  
  until kerta < 1
    puts text
    kerta -= 1
  end
  
end

tulostaja("HALABALA",2)
=end





